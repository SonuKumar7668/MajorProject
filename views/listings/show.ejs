<% layout("layout/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-3">
            <h3 class="card-text"><%=content.title%> </h3>
        </div>
        <div class="card col-6 offset-3">
            <img src="<%=content.image%>" class="card-img-top show-img" alt="...">
        <div class="card-body">
            <p class="card-text">
                <b><%=content.title%></b><br>
                <%=content.description  %> <br>
                &#8377;<%=content.price.toLocaleString("en-IN")  %> <br>
                <%=content.location  %>
                <%=content.Country  %>
            </p>
        </div>
    </div>
    <div class="btns">
        <form action="/listing/<%= content._id %>/edit" method="get">
            <button class="btn btn-dark ">edit</button>
        </form>
        <form action="/listing/<%= content._id %>/delete?_method=DELETE" method="post">
            <button class="btn btn-dark offset-4">Delete</button>
        </form>
    </div>
</div>

</body>