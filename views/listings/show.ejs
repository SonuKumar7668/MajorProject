    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=content.title%></title>
</head>
<body>
    <h3><%=content.title%></h3>
    <p><%=content.description  %></p>
    <p>&#8377;<%=content.price.toLocaleString("en-IN")  %></p>
